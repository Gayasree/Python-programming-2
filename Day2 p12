def calculate_grade(marks): 
average_mark = sum(marks) / len(marks)
if average_mark >= 90: 
return 'A' 
elif 80 <= average_mark < 90:
return 'B'
elif 70 <= average_mark < 80:
return 'C' 
elif 60 <= average_mark < 70: 
return 'D' 
elif 50 <= average_mark < 60: 
return 'E'
else: 
return 'F'
# Input 
subject1_mark = float(input("Enter mark for subject 1: ")) 
subject2_mark = float(input("Enter mark for subject 2: "))
subject3_mark = float(input("Enter mark for subject 3: ")) 
# Calculate grade
marks = [subject1_mark, subject2_mark, subject3_mark] 
grade = calculate_grade(marks) 
# Output 
print("Average mark:", sum(marks) / len(marks))
print("Grade:", grade) 
